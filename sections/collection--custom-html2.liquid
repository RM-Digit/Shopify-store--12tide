{%- if section.settings.space_around -%}
  <div class="index-section">
{%- endif -%}
{%- if section.settings.alt -%}
  <div class="index-section--alt">
{%- endif -%}
{%- unless section.settings.full_width -%}
  <div class="page-width">
{%- endunless -%}
  <div>
    <div class="rte custom-html-rte">
      {%- if section.settings.code != blank -%}
        {{ section.settings.code }}
      {%- else -%}
        {{ 'home_page.onboarding.no_content' | t }}
      {%- endif -%}
    </div>
  </div>
{%- unless section.settings.full_width -%}
  </div>
{%- endunless -%}
{%- if section.settings.alt -%}
  </div>
{%- endif -%}
{%- if section.settings.space_around -%}
  </div>
{%- endif -%}

{% schema %}
  {
    "name": "Custom HTML",
    "settings": [
      {
        "type": "checkbox",
        "id": "full_width",
        "label": "Full page width"
      },
      {
        "type": "checkbox",
        "id": "space_around",
        "label": "Add spacing above and below",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "alt",
        "label": "Use alternate section color"
      },
      {
        "type": "textarea",
        "id": "code",
        "label": "HTML",
        "default": "<h2>Custom HTML</h2><p>Use this advanced section to build your own layouts or to add custom HTML or scripts.</p>"
      }
    ]
  }
{% endschema %}