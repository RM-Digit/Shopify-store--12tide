{%- style -%}
  @font-face {
    font-family: 'Avenir';
    src: url({{ 'AvenirLTStd-Roman.eot' | asset_url }});
    src: url({{ 'AvenirLTStd-Roman.eot?#iefix' | asset_url }}) format('embedded-opentype'),
        url({{ 'AvenirLTStd-Roman.ttf' | asset_url }}) format('truetype'),
        url({{ 'AvenirLTStd-Roman.woff' | asset_url }}) format('woff'),
        url({{ 'AvenirLTStd-Roman.woff2' | asset_url }}) format('woff2');
    font-weight: normal;
    font-style: normal;
  }

  @font-face {
    font-family: 'Proxima Nova';
    src: url({{ 'ProximaNova-Regular.eot' | asset_url }});
    src: url({{ 'ProximaNova-Regular.eot?#iefix' | asset_url }}) format('embedded-opentype'),
        url({{ 'ProximaNova-Regular.ttf' | asset_url }}) format('truetype'),
        url({{ 'ProximaNova-Regular.woff' | asset_url }}) format('woff'),
        url({{ 'ProximaNova-Regular.woff2' | asset_url }}) format('woff2');
    font-weight: normal;
    font-style: normal;
  }

  @font-face {
    font-family: 'Proxima Nova Bold';
    src: url({{ 'ProximaNova-Bold.eot' | asset_url }});
    src: url({{ 'ProximaNova-Bold.eot?#iefix' | asset_url }}) format('embedded-opentype'),
        url({{ 'ProximaNova-Bold.svg#ProximaNova-Bold' | asset_url }}) format('svg'),
        url({{ 'ProximaNova-Bold.ttf' | asset_url }}) format('truetype'),
        url({{ 'ProximaNova-Bold.woff' | asset_url }}) format('woff'),
        url({{ 'ProximaNova-Bold.woff2' | asset_url }}) format('woff2');
    font-weight: normal;
    font-style: normal;
  }

  @font-face {
    font-family: 'Proxima Nova Black';
    src: url({{ 'Proxima-Nova-Black.eot' | asset_url }});
    src: url({{ 'Proxima-Nova-Black.eot?#iefix' | asset_url }}) format('embedded-opentype'),
        url({{ 'Proxima-Nova-Black.woff' | asset_url }}) format('woff'),
        url({{ 'Proxima-Nova-Black.woff2' | asset_url }}) format('woff2');
    font-weight: normal;
    font-style: normal;
  }

  @font-face {
    font-family: 'Proxima Nova Condensed';
    src: url({{ 'ProximaNovaCond-Bold.eot' | asset_url }});
    src: url({{ 'ProximaNovaCond-Bold.eot?#iefix' | asset_url }}) format('embedded-opentype'),
          url({{ 'ProximaNovaCond-Bold.ttf' | asset_url }}) format('truetype'),
          url({{ 'ProximaNovaCond-Bold.woff' | asset_url }}) format('woff'),
          url({{ 'ProximaNovaCond-Bold.woff2' | asset_url }}) format('woff2');
    font-weight: normal;
    font-style: normal;
  }

  @font-face {
    font-family: 'Proxima Nova Extra Condensed';
    src: url({{ 'ProximaNovaExCn-Black.eot' | asset_url }});
    src: url({{ 'ProximaNovaExCn-Black.eot?#iefix' | asset_url }}) format('embedded-opentype'),
        url({{ 'ProximaNovaExCn-Black.svg#ProximaNovaExCn-Black' | asset_url }}) format('svg'),
        url({{ 'ProximaNovaExCn-Black.ttf' | asset_url }}) format('truetype'),
        url({{ 'ProximaNovaExCn-Black.woff' | asset_url }}) format('woff'),
        url({{ 'ProximaNovaExCn-Black.woff2' | asset_url }}) format('woff2');
    font-weight: normal;
    font-style: normal;
  }

  :root {
    --typeHeaderPrimary:'Proxima Nova Extra Condensed';
    --typeHeaderFallback: {{ settings.type_header_font_family.fallback_families }};
    --typeHeaderSize: {{ settings.type_header_base_size | default: 32 | append: 'px' }};
    --typeHeaderStyle: {{ settings.type_header_font_family.style }};
    --typeHeaderWeight: {{ settings.type_header_font_family.weight }};
    --typeHeaderLineHeight: {{ settings.type_header_line_height | default: 1.4 }};
    --typeHeaderSpacing: {{ settings.type_header_spacing | default: '25' | divided_by: 1000.00 | append: 'em' }};

    --typeBasePrimary:'Proxima Nova';
    --typeBaseFallback:{{ settings.type_base_font_family.fallback_families }};
    --typeBaseSize: {{ settings.type_base_size | default: 16 | append: 'px' }};
    --typeBaseWeight: {{ settings.type_base_font_family.weight }};
    --typeBaseStyle: {{ settings.type_base_font_family.style }};
    --typeBaseSpacing: {{ settings.type_base_spacing | default: '50' | divided_by: 1000.00 | append: 'em' }};
    --typeBaseLineHeight: {{ settings.type_base_line_height | default: 24 }};

    {% if settings.button_style == 'round-slight' %}
      --buttonRadius: 3px;
    {% elsif settings.button_style == 'round' %}
      --buttonRadius: 35px;
    {% else %}
      --buttonRadius: 0px;
    {% endif %}

    --iconWeight: {{ settings.icon_weight | default: '5px' }};
    --iconLinecaps: {{ settings.icon_linecaps | default: 'miter' }};
  }

  {% if settings.color_cart_dot == settings.color_button %}
    .site-nav__thumb-cart {
      border-left: 1px solid rgba(255,255,255,0.3);
    }
  {% endif %}

  .hero {
    background-image: linear-gradient(100deg, {{ settings.color_large_image_bg }} 40%, {{ settings.color_large_image_bg | color_lighten: 13 }} 63%, {{ settings.color_large_image_bg }} 79%);
  }

  .placeholder-content,
  .image-wrap,
  .skrim__link,
  .pswp__img--placeholder {
    background-image: linear-gradient(100deg, {{ settings.color_small_image_bg }} 40%, {{ settings.color_small_image_bg | color_darken:
    3 }} 63%, {{ settings.color_small_image_bg }} 79%);
  }
{%- endstyle -%}
